<!--pages/home/home.wxml-->
<import src="../../wxParse/wxParse.wxml" />
<view class="page">
  <view class="page__bd">
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell">
        <view class="weui-cell__hd" style="position: relative;margin-right: 10px;">
          <image src="{{uploadpath}}clinic/{{clinic.logo}}" style="width: 10vh; height: 10vh; display: block" />
        </view>
        <view class="weui-cell__bd">
          <view>{{clinic.name}}</view>
          <view style="font-size: 13px;color: #888888;">{{clinic.summary}}</view>
        </view>
      </view>
    </view>


    <view class="weui-article">
      <view class="weui-article__h1">服务内容</view>
      <view class="weui-article__section">
        <view class="weui-article__section">
          <view class="weui-article__p">
            <template is="wxParse" data="{{wxParseData:content.nodes}}" />
          </view>
        </view>
      </view>
    </view>

    <view class="weui-panel">
      <view class="weui-panel__hd">星级医生<text bindtap='gotoDoctorList' style='font-size:70%;right:0;position:absolute;padding-right:5px;'>查看更多></text></view>
      <view class="weui-panel__bd">
        <view class="weui-media-box weui-media-box_small-appmsg">
          <view class="weui-cells weui-cells_in-small-appmsg">
            <navigator wx:for="{{stardoctors}}" wx:key="key"  url="/pages/doctor/doctor?id={{item.id}}" open-type='navigate' class="weui-cell weui-cell_access" hover-class="weui-cell_active">
              <view class="weui-cell__hd">
                <image src="{{uploadpath}}doctor/{{item.photo}}" style="border-radius:10vw; width: 20vw;height: 20vw;margin-right: 5px" />
              </view>
              <view class="weui-cell__bd weui-cell_primary">
                <view class="weui-media-box weui-media-box_text">
                  <view class="weui-media-box__title weui-media-box__title_in-text">{{item.name}}</view>
                  <view class="weui-media-box__desc">
                    <text decode="true">{{item.summary}}</text>
                  </view>
                </view>
              </view>
              <view class="weui-cell__ft weui-cell__ft_in-access"></view>
            </navigator>
          </view>
        </view>
      </view>
    </view>

    <view class="weui-cells__title">我们诊所</view>
    <view class="weui-cells weui-cells_after-title">

      <swiper indicator-dots="true">
        <block wx:for="{{photos}}" wx:key="k">
          <swiper-item>
            <image src="{{uploadpath}}clinicphoto/{{item.photo}}" class="slide-image" style='width:100vw;' />
          </swiper-item>
        </block>
      </swiper>
    </view>



    <view class="weui-cells__title">资质证明</view>
    <view class="weui-cells weui-cells_after-title">
      <view class='weui-cell'>
        <view class="weui-cell__bd" bindtap='viewPhoto' id="{{uploadpath}}clinic/{{clinic.businesslicense}}">营业执照</view>
        <view class="weui-cell__ft weui-cell__ft_in-access"></view>
      </view>
      <view class='weui-cell' bindtap='viewPhoto' id="{{uploadpath}}clinic/{{clinic.medicallicense}}">
        <view class="weui-cell__bd">医疗机构许可证</view>
        <view class="weui-cell__ft weui-cell__ft_in-access"></view>
      </view>
    </view>

    <view class="weui-cells__title">联系我们</view>
    <view class="weui-cells weui-cells_after-title">
      <view class='weui-cell' bindtap='phoneCall' id="{{clinic.tel}}">
        <view class="weui-cell__bd" style='min-width:30vw' >咨询热线</view>
        <view class="weui-cell__ft" >{{clinic.tel}}</view>
      </view>
      <view class='weui-cell' bindtap='openMap' id="{{clinic.address}}">
        <view class="weui-cell__bd" style='min-width:30vw' >诊所地址</view>
        <view class="weui-cell__ft" >{{clinic.address}}</view>
      </view>
    </view>




    <view class="weui-footer ">
      <view class="weui-footer__links">
        <navigator url="" class="weui-footer__link">{{copyright.name}}</navigator>
      </view>
      <view class="weui-footer__text">Copyright © 2008-2018 {{copyright.website}}</view>
    </view>
  </view>
</view>