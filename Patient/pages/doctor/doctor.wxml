<!--pages/doctor/doctor.wxml-->
<view class="page">
  <view class="page__bd">
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell">
        <view class="weui-cell__hd" style="position: relative;margin-right: 10px;">
          <image src="{{uploadpath}}doctor/{{doctor.photo}}" style="width: 20vw; height: 20vw; display: block;border-radius:10vw;" />
        </view>
        <view class="weui-cell__bd">
          <view>{{doctor.name}}</view>
          <view style="font-size: 13px;color: #888888;">{{doctor.position}}</view>
          <view style="font-size: 13px;color: #888888;">{{doctor.qualification}}</view>
        </view>
      </view>
    </view>

    <view class="weui-cells__title">擅长</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell">
        <view class="weui-cell__bd">{{doctor.goodat}}</view>
      </view>
    </view>

    <view class="weui-cells__title">资历</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell">
        <view class="weui-cell__bd">{{doctor.content}}</view>
      </view>
    </view>



  </view>


    <view class="page__bd page__bd_spacing" style='padding:2vh;'>
        <button class="weui-btn" bindtap='gotoOrder' type="primary" wx:if="{{doctor.active_video_query}}">立即预约</button>
    </view>

</view>