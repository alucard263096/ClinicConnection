<!--pages/static/static.wxml-->
<!--pages/meeting/meeting.wxml-->
<view class="page">
  <view class="page__bd">
    <view class="weui-tab">
      <view class="weui-navbar">
        <block wx:for-items="{{tabs}}" wx:key="{{index}}">
          <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
            <view class="weui-navbar__title">{{item.name}}
              <view class="weui-badge" wx:if="{{index==0&&plist.length>0}}">{{plist.length}}</view>
              <view class="weui-badge" wx:if="{{index==1&&wlist.length>0}}">{{wlist.length}}</view>
              <view class="weui-badge" wx:if="{{index==2&&clist.length>0}}">{{clist.length}}</view>
            </view>
          </view>
        </block>
        <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
      </view>
      <view class="weui-tab__panel">
        <view class="weui-tab__content" hidden="{{activeIndex != 0}}">
          <view style='background:white;'>
            <view style='margin-top:2vh;'>
              <text style='margin-left:2vh;'>昨日概况</text>
              <text class='weui-msg__desc' style='position:absolute;right:2vh;margin-top:1vh;'>数据更新至2018-01-28</text>
            </view>
            <view class="weui-flex summaryitem">
              <view class="weui-flex__item">
                <view class="placeholder">
                  <view class='weui-media-box__desc'>累计预约</view>
                  <view>1.6K</view>
                  <view class='weui-media-box__desc primary'>日：37.47%</view>
                  <view class='weui-media-box__desc danger'>月：37.47%</view>
                  <view class='weui-media-box__desc'>年：37.47%</view>
                </view>
              </view>
              <view class="weui-flex__item">
                <view class="placeholder">累计会诊</view>
              </view>
              <view class="weui-flex__item">
                <view class="placeholder">累计收入</view>
              </view>
            </view>
          </view>



        </view>
        <view class="weui-tab__content" hidden="{{activeIndex != 1}}">




        </view>

        <view class="weui-tab__content" hidden="{{activeIndex != 2}}">



        </view>


        <view class="weui-tab__content" hidden="{{activeIndex != 3}}">



        </view>



      </view>
    </view>
  </view>
</view>